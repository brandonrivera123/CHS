@model CHS_Auction_Site.Models.PackageDetailsVM

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div>
    <a asp-action="Index">Go to Packages Page</a> |
    <a asp-controller="Events" asp-action="Details" asp-route-id="@Model.Packages.EventId">Go to Event Detail Page</a>
</div>
<div>
    <h4>Packages</h4>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Packages.PackageDescription)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Packages.PackageStartBid)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Packages.PackageBidIncrement)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Packages.PackageFinalPrice)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Packages.EventId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Packages.TransactionId)
                </th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>
                    @Html.DisplayFor(model => model.Packages.PackageDescription)
                </td>
                <td>
                    @Html.DisplayFor(model => model.Packages.PackageStartBid)
                </td>
                <td>
                    @Html.DisplayFor(model => model.Packages.PackageBidIncrement)
                </td>
                <td>
                    @Html.DisplayFor(model => model.Packages.PackageFinalPrice)
                </td>
                <td>
                    @Html.DisplayFor(model => model.Packages.EventId)
                </td>
                <td>
                    @Html.DisplayFor(model => model.Packages.TransactionId)
                </td>
            </tr>
        </tbody>
    </table>
    <hr />
    <h2>Items</h2>
    <div class="row">
        <div class="col-lg-3">
            <div class="form-group">
                <input class="form-control" id="focusedInput" onkeyup="myFunction()" type="text" placeholder="Search">
            </div>
        </div>
        <div class="col-lg-1">
            <div class="btn-group">
                <a href="#" class="btn btn-warning dropdown-toggle" id="Filter" data-toggle="dropdown">Filter<span class="caret"></span></a>
                <ul class="dropdown-menu" id="selectedvalue">
                    <li><a href="#">Leisure</a></li>
                    <li><a href="#">Artwork</a></li>
                    <li><a href="#">Clothing</a></li>
                    <li><a href="#">Other</a></li>
                    <li class="divider"></li>
                    <li><a href="#" id="All">All</a></li>
                </ul>
            </div>
        </div>
        <div class="col-lg-1">
            <a href="#" class="btn btn-primary" data-toggle="modal" data-target="#addModal">Add</a>
        </div>
    </div>

    <div class="row">
        @foreach (var item in Model.Items.Where(m => m.PackageId == Model.Packages.PackageId))
        {
            <div class="col-sm-6 col-md-4">
                <div class="thumbnail">
                    <img src="@Html.DisplayFor(model => item.ItemImage)">
                    <div class="caption">
                        <h3>@Html.DisplayFor(model => item.ItemName)</h3>
                        <p style="height:45px; overflow:hidden">@Html.DisplayFor(model => item.ItemDescription)</p>
                        <a href="#" class="btn btn-primary" data-toggle="modal" data-target="#editModal">Edit</a>
                        <a href="#" class="btn btn-default" data-toggle="modal" data-target="#viewDetailModal">View Details</a>
                    </div>
                </div>
            </div>
            <div class="modal fade" id="viewDetailModal" role="dialog">
                <div class="modal-dialog">
                    <!-- Modal content-->
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                            <h4 class="modal-title">Item No. @Html.DisplayFor(model => item.ItemId)</h4>
                        </div>
                        <div class="modal-body">
                            <div>
                                <form class="form-horizontal">
                                    <fieldset>
                                        <div class="form-group">
                                            <div class="thumbnail">
                                                <img src="@Html.DisplayFor(model => item.ItemImage)">
                                            </div>
                                        </div>
                                        <hr />
                                        <p class="col-lg-3">Item Name: </p>
                                        <p class="col-lg-9">@Html.DisplayFor(model => item.ItemName)</p>

                                        <p class="col-lg-3">Description: </p>
                                        <p class="col-lg-9">@Html.DisplayFor(model => item.ItemDescription)</p>

                                        <p class="col-lg-3">Category: </p>
                                        <p class="col-lg-9">@Html.DisplayFor(model => item.ItemCategory)</p>

                                        <p class="col-lg-3">Value: </p>
                                        <p class="col-lg-9">@Html.DisplayFor(model => item.ItemValue)</p>

                                        <p class="col-lg-3">Donor: </p>
                                        <p class="col-lg-9">@Html.DisplayFor(model => item.GuestId)</p>

                                        <p class="col-lg-3">Package ID: </p>
                                        <p class="col-lg-9">@Html.DisplayFor(model => item.PackageId)</p>
                                    </fieldset>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
<div>
    <a asp-action="Index">Go to Packages Page</a> |
    <a asp-controller="Events" asp-action="Details" asp-route-id="@Model.Packages.EventId">Go to Event Detail Page</a>
</div>
