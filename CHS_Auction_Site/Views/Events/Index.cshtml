@model IEnumerable<CHS_Auction_Site.Models.Events>

@{
    ViewData["Title"] = "Events";
}

<h2>Events</h2>

<p>
    <a href="#" class="btn btn-primary" data-toggle="modal" data-target="#createEventModal">Create New</a>
</p>
<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-sm-6 col-md-4">
            <div class="thumbnail">
                <div class="caption">
                    <h3>@Html.DisplayFor(model => item.EventLocation)</h3>
                    <hr />
                    <p># of Tickets: @Html.DisplayFor(model => item.EventTicketNum)</p>
                    <p>Start Time: @Html.DisplayFor(model => item.EventStart)</p>
                    <p>End Time: @Html.DisplayFor(model => item.EventEnd)</p>
                    <hr />
                    <a href="#" class="btn btn-primary" data-toggle="modal" data-target="#editEventModal-@item.EventId">Edit</a>
                    <a class="btn btn-default" asp-action="Details" asp-route-id="@item.EventId">Details</a>
                    <a href="#" class="btn btn-default" data-toggle="modal" data-target="#deleteEventModal-@item.EventId">Delete</a>
                </div>
            </div>
        </div>

        <div class="modal fade" id="deleteEventModal-@item.EventId" role="dialog">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title">Are you sure you want to delete this event?</h4>
                    </div>
                    <div class="modal-body">
                        <div>
                            <dl class="dl-horizontal">
                                <dt>
                                    @Html.DisplayNameFor(model => model.EventId)
                                </dt>
                                <dd>
                                    @Html.DisplayFor(model => item.EventId)
                                </dd>
                                <dt>
                                    @Html.DisplayNameFor(model => model.EventLocation)
                                </dt>
                                <dd>
                                    @Html.DisplayFor(model => item.EventLocation)
                                </dd>
                                <dt>
                                    @Html.DisplayNameFor(model => model.EventTicketNum)
                                </dt>
                                <dd>
                                    @Html.DisplayFor(model => item.EventTicketNum)
                                </dd>
                                <dt>
                                    @Html.DisplayNameFor(model => model.EventStart)
                                </dt>
                                <dd>
                                    @Html.DisplayFor(model => item.EventStart)
                                </dd>
                                <dt>
                                    @Html.DisplayNameFor(model => model.EventEnd)
                                </dt>
                                <dd>
                                    @Html.DisplayFor(model => item.EventEnd)
                                </dd>
                            </dl>

                            <form asp-action="Delete" asp-route-id="@item.EventId">
                                <input type="hidden" asp-for="@item.EventId" />
                                <input type="submit" value="Delete" class="btn btn-primary" />
                                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="modal fade" id="editEventModal-@item.EventId" role="dialog">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title">Edit Event No. @item.EventId</h4>
                    </div>
                    <div class="modal-body">
                        <div>
                            <form asp-action="Edit">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <input type="hidden" asp-for="@item.EventId" />
                                <div class="form-group">
                                    <label asp-for="@item.EventLocation" class="control-label"></label>
                                    <input asp-for="@item.EventLocation" class="form-control" />
                                    <span asp-validation-for="@item.EventLocation" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="@item.EventTicketNum" class="control-label"></label>
                                    <input asp-for="@item.EventTicketNum" class="form-control" />
                                    <span asp-validation-for="@item.EventTicketNum" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="@item.EventStart" class="control-label"></label>
                                    <input asp-for="@item.EventStart" class="form-control" />
                                    <span asp-validation-for="@item.EventStart" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="@item.EventEnd" class="control-label"></label>
                                    <input asp-for="@item.EventEnd" class="form-control" />
                                    <span asp-validation-for="@item.EventEnd" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <input type="submit" value="Save" class="btn btn-default" />
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>