<h2>Item Log</h2>

<div class="row">
    <div class="col-lg-3">
        <div class="form-group">
            <input class="form-control" id="focusedInput" onkeyup="myFunction()" type="text" placeholder="Search">
        </div>
    </div>
    <div class="col-lg-1">
        <div class="btn-group">
            <a href="#" class="btn btn-warning dropdown-toggle" id="Filter" data-toggle="dropdown">Filter <span class="caret"></span></a>
            <ul class="dropdown-menu" id="selectedvalue">
                <li><a href="#">Leisure</a></li>
                <li><a href="#">Artwork</a></li>
                <li><a href="#">Clothing</a></li>
                <li><a href="#">Other</a></li>
                <li class="divider"></li>
                <li><a href="#" id="All">All</a></li>
            </ul>
        </div>
    </div>
    <div class="col-lg-1">
        <a href="#" class="btn btn-primary" data-toggle="modal" data-target="#addModal">Add</a>
    </div>
</div>

<ul class="nav nav-tabs">
    <li class="active"><a href="#home" data-toggle="tab" aria-expanded="true">Items</a></li>
    <li class=""><a href="#profile" data-toggle="tab" aria-expanded="false">Packages</a></li>
</ul>
<div id="myTabContent" class="tab-content">
    <div class="tab-pane fade active in" id="home">
        <div class="row">
            @foreach (var item in Model.items.Where(m => m.PackageId == null))
        {
            <div class="col-sm-6 col-md-4">
                <div class="thumbnail">
                    <img src="@Html.DisplayFor(modelItem => item.ItemImage)">
                    <div class="caption">
                        <span class="label label-success">Individual</span><span class="badge">1</span>
                        <h3>@Html.DisplayFor(modelItem => item.ItemName)</h3>
                        <p style="height:45px; overflow:hidden">@Html.DisplayFor(modelItem => item.ItemDescription)</p>
                        <a href="#" class="btn btn-primary" data-toggle="modal" data-target="#editModal">Edit</a>
                        <a href="#" class="btn btn-default" data-toggle="modal" data-target="#viewDetailModal-@item.ItemId">View Details</a>
                    </div>
                </div>
            </div>
            <div class="modal fade" id="viewDetailModal-@item.ItemId" role="dialog">
                <div class="modal-dialog">
                    <!-- Modal content-->
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                            <h4 class="modal-title">Item No. 1</h4>
                        </div>
                        <div class="modal-body">
                            <div>
                                <form class="form-horizontal">
                                    <fieldset>
                                        <div class="form-group">
                                            <div class="thumbnail">
                                                <img src="@Html.DisplayFor(modelItem => item.ItemImage)">
                                            </div>
                                        </div>

                                        <hr />
                                        <p class="col-lg-3">Item Name: </p>
                                        <p class="col-lg-9">@Html.DisplayFor(modelItem => item.ItemName)</p>

                                        <p class="col-lg-3">Category: </p>
                                        <p class="col-lg-9">@Html.DisplayFor(modelItem => item.ItemCategory)</p>

                                        <p class="col-lg-3">Description: </p>
                                        <p class="col-lg-9">@Html.DisplayFor(modelItem => item.ItemDescription)</p>

                                        <p class="col-lg-3">Event Type: </p>
                                        <p class="col-lg-9">Silent Auction</p>

                                        <p class="col-lg-3">Event Date: </p>
                                        <p class="col-lg-9">3/19/2018</p>

                                        <p class="col-lg-3">Starting Bid: </p>
                                        <p class="col-lg-9">@Html.DisplayFor(modelItem => item.ItemValue)</p>

                                        <p class="col-lg-3">Bid Increment: </p>
                                        <p class="col-lg-9">$2.00</p>


                                    </fieldset>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
    }
        </div>
    </div>
    <div class="tab-pane fade" id="profile">
        <div class="row">
            @foreach (var item in Model.packages)
        {
            <div class="col-sm-6 col-md-4">
                <div class="thumbnail">
                    <div class="caption">
                        <h3>@Html.DisplayFor(modelItem => item.PackageId)</h3>
                        <p style="height:45px; overflow:hidden">@Html.DisplayFor(modelItem => item.PackageDescription)</p>
                        <a href="#" class="btn btn-primary" data-toggle="modal" data-target="#editModal">Edit</a>
                        <a href="#" class="btn btn-default" data-toggle="modal" data-target="#viewPackageDetailModal-@item.PackageId">View Details</a>
                    </div>
                </div>
            </div>
            <div class="modal fade" id="viewPackageDetailModal-@item.PackageId" role="dialog">
                <div class="modal-dialog">
                    <!-- Modal content-->
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                            <h4 class="modal-title">Package No. @item.PackageId</h4>
                        </div>
                        <div class="modal-body">
                            <div>
                                <form class="form-horizontal">
                                    <fieldset>
                                        <p class="col-lg-3">Package ID: </p>
                                        <p class="col-lg-9">@Html.DisplayFor(modelItem => item.PackageId)</p>

                                        <p class="col-lg-3">Description: </p>
                                        <p class="col-lg-9">@Html.DisplayFor(modelItem => item.PackageDescription)</p>

                                        <p class="col-lg-3">Start Bid: </p>
                                        <p class="col-lg-9">@Html.DisplayFor(modelItem => item.PackageStartBid)</p>

                                        <p class="col-lg-3">Bid Increment: </p>
                                        <p class="col-lg-9">@Html.DisplayFor(modelItem => item.PackageBidIncrement)<p>

                                        <p class="col-lg-3">Final Price: </p>
                                        <p class="col-lg-9">@Html.DisplayFor(modelItem => item.PackageFinalPrice)</p>

                                        <p class="col-lg-3">Event: </p>
                                        <p class="col-lg-9">@Html.DisplayFor(modelItem => item.EventId)</p>

                                        <p class="col-lg-3">Transaction: </p>
                                        <p class="col-lg-9">@Html.DisplayFor(modelItem => item.TransactionId)</p>


                                    </fieldset>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
    }
        </div>
    </div>
</div>





